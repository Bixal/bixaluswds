{#
/**
 * @file
 * Theme override to display a media item: image.
 */
#}
{% extends 'media.html.twig' %}

{% block content %}
  <figure{{ attributes.addClass(classes) }}>
    {% if content.field_media_image | render %}
      {{ content.field_media_image | field_value }}
    {% endif %}

    {% if caption %}
      <figcaption class="{{ class_prefix ~ 'caption' }}">
        {{ caption }}
      </figcaption>
    {% endif %}
  </figure>
{% endblock %}
